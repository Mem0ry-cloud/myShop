@model IEnumerable<Product>
<h1>Shopping Cart</h1>
<form method="post">
	<p><a class="btn">Continue Shopping</a></p>
	@foreach (var item in Model){
		<p><img src="@PathManager.ImageProductPath@item.Image" width="100" class="rounded"></img></p>
		<p>Product Name : @item.Name</p>
		<p>Description: @item.Description</p>
		<p>Price: @item.Price</p>
		<p><a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.Id">Delete</a></p>
		<p><button type="submit" class="btn btn-success">Subbmit</button></p>
	}
</form>